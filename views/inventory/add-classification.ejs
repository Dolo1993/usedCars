<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Classification</title>
  <link rel="stylesheet" type="text/css" href="/css/">
</head>
<body>

<div class="container">
  <h2>Add New Classification</h2>

  <% if (messages.length > 0) { %>
    <div class="alert alert-<%= messages[0].type %>">
      <%= messages[0].msg %>
    </div>
  <% } %>

  <form action="/inv/add-classification" method="post" onsubmit="return validateForm()">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" required>
    <span id="errorMsg"></span>

    <button type="submit">Add Classification</button>
  </form>
</div>

<script>
  function validateForm() {
    const classification_name = document.getElementById('classification_name').value;
    const errorMsg = document.getElementById('errorMsg');
    
    // Check if classificationName contains spaces or special characters
    if (/\s/.test(classification_name) || /[^a-zA-Z0-9]/.test(classification_name)) {
      errorMsg.innerText = 'Invalid classification name. It should not contain spaces or special characters.';
      return false;
    } else {
      errorMsg.innerText = '';
      return true;
    }
  }
</script>

</body>
</html>
