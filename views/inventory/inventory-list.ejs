<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/css/inventory-list.css">
</head>
<body>
    <div class="container">
        <h2><%= title %></h2>

        <% if (messages.length > 0) { %>
            <div class="alert alert-success">
                <%= messages[0] %>
            </div>
        <% } %>

        <!-- Search Bar -->
        <form method="GET" action="/inv/list">
            <input type="text" name="search" class="search-input" placeholder="Search by make or model" value="<%= searchQuery %>" /> 
            <button type="submit" class="search-button">Search</button> 
        </form>

        <table>
            <thead>
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for (let item of inventoryItems) { %>
                    <tr>
                        <td><%= item.inv_make %></td>
                        <td><%= item.inv_model %></td>
                        <td><%= item.inv_description %></td>
                        <td><%= item.inv_price %></td>
                        <td>
                            <a class="table-action edit-button" href="/inv/edit/<%= item.inv_id %>">Edit</a>
                            <a href="/inv/delete/<%= item.inv_id %>" class="table-action delete-button">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        
        <a class="button" href="/inv/add-inventory">Add New Inventory</a>
    </div>
</body>
</html>
