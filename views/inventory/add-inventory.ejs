<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Vehicle to Inventory</title>
    <link rel="stylesheet" type="text/css" href="/css/add-inventory.css">
</head>
<body>
    <div class="container">
        <div class="card-container"> 
            <h1>Add New Vehicle to Inventory</h1>

            <% if (errorMsg) { %>
                <div class="alert alert-danger">
                    <%= errorMsg %>
                </div>
            <% } %> 

            <form method="POST" action="/inv/add-inventory">

                <!-- Classification Dropdown -->
                <div class="form-group">
                    <label for="classification_id">Classification:</label>
                    <select class="form-control" id="classification_id" name="classification_id" required>
                        <option value="" selected disabled>Choose Classification</option>
                        <% classifications.forEach(classification => { %>
                            <option value="<%= classification.classification_id %>" <%= formData.classification_id == classification.classification_id ? 'selected' : '' %>>
                                <%= classification.classification_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                
                <!-- Vehicle Make Field -->
                <div class="form-group">
                    <label for="inv_make">Make:</label>
                    <input type="text" class="form-control" id="inv_make" name="inv_make" value="<%= formData.inv_make || '' %>" required placeholder="e.g., Toyota">
                </div>

                <!-- Vehicle Model Field -->
                <div class="form-group">
                    <label for="inv_model">Model:</label>
                    <input type="text" class="form-control" id="inv_model" name="inv_model" value="<%= formData.inv_model || '' %>" required placeholder="e.g., Corolla">
                </div>

                <!-- Description Field -->
                <div class="form-group">
                    <label for="inv_description">Description:</label>
                    <textarea class="form-control" id="inv_description" name="inv_description" rows="3" required placeholder="Vehicle description..."><%= formData.inv_description || '' %></textarea>
                </div>

                <!-- Image Path Field -->
                <div class="form-group">
                    <label for="inv_image">Image Path:</label>
                    <input type="text" class="form-control" id="inv_image" name="inv_image" value="<%= formData.inv_image || '' %>" required placeholder="e.g., /images/cars/car.jpg">
                </div>

                <!-- Thumbnail Path Field -->
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input type="text" class="form-control" id="inv_thumbnail" name="inv_thumbnail" value="<%= formData.inv_thumbnail || '' %>" required placeholder="e.g., /images/cars/thumb.jpg">
                </div>

                <!-- Price Field -->
                <div class="form-group">
                    <label for="inv_price">Price:</label>
                    <input type="number" class="form-control" id="inv_price" name="inv_price" value="<%= formData.inv_price || '' %>" required placeholder="e.g., 15000">
                </div>

                <!-- Year Field -->
                <div class="form-group">
                    <label for="inv_year">Year:</label>
                    <input type="number" class="form-control" id="inv_year" name="inv_year" value="<%= formData.inv_year || '' %>" required placeholder="e.g., 2020">
                </div>

                <!-- Miles Field -->
                <div class="form-group">
                    <label for="inv_miles">Miles:</label>
                    <input type="number" class="form-control" id="inv_miles" name="inv_miles" value="<%= formData.inv_miles || '' %>" required placeholder="e.g., 5000">
                </div>

                <!-- Color Field -->
                <div class="form-group">
                    <label for="inv_color">Color:</label>
                    <input type="text" class="form-control" id="inv_color" name="inv_color" value="<%= formData.inv_color || '' %>" required placeholder="e.g., Red">
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Add Vehicle</button>
            </form>
        </div>
    </div>
</body>
</html>
