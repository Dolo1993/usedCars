<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Vehicle to Inventory</title>
    <link rel="stylesheet" type="text/css" href="/css/add-inventory.css">
</head>
<body>
    <div class="container">
        <div class="card-container">
            <h1>Add New Vehicle to Inventory</h1>

            <% if (errorMsg) { %>
                <div class="alert alert-danger">
                    <%= errorMsg %>
                </div>
            <% } %>

            <form action="/inv/add-inventory" method="POST" enctype="multipart/form-data">
                <!-- Classification Dropdown -->
                <div class="form-group">
                    <label for="classification_id">Classification:</label>
                    <select name="classification_id" id="classification_id" class="form-control" required>
                        <option value="" selected disabled>Choose Classification</option>
                        <% classifications.forEach(classification => { %>
                            <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
                        <% }); %>
                    </select>
                </div>

                <!-- Vehicle Make Field -->
                <div class="form-group">
                    <label for="inv_make">Make:</label>
                    <input type="text" name="inv_make" id="inv_make" class="form-control" required />
                </div>

                <!-- Vehicle Model Field -->
                <div class="form-group">
                    <label for="inv_model">Model:</label>
                    <input type="text" name="inv_model" id="inv_model" class="form-control" required />
                </div>

                <!-- Description Field -->
                <div class="form-group">
                    <label for="inv_description">Description:</label>
                    <textarea name="inv_description" id="inv_description" class="form-control" required></textarea>
                </div>

                <!-- Image Upload Field -->
                <div class="form-group">
                    <label for="inv_image">Image:</label>
                    <input type="file" name="inv_image" id="inv_image" class="form-control-file" accept="image/*" required />
                </div>

                <!-- Thumbnail Upload Field -->
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail:</label>
                    <input type="file" name="inv_thumbnail" id="inv_thumbnail" class="form-control-file" accept="image/*" />
                </div>

                <!-- Price Field -->
                <div class="form-group">
                    <label for="inv_price">Price:</label>
                    <input type="number" name="inv_price" id="inv_price" class="form-control" required />
                </div>

                <!-- Year Field -->
                <div class="form-group">
                    <label for="inv_year">Year:</label>
                    <input type="number" name="inv_year" id="inv_year" class="form-control" required />
                </div>

                <!-- Miles Field -->
                <div class="form-group">
                    <label for="inv_miles">Miles:</label>
                    <input type="number" name="inv_miles" id="inv_miles" class="form-control" />
                </div>
                <!-- color field -->
                <div class="form-group">
                    <label for="inv_color">Color:</label>
                    <input type="text" name="inv_color" id="inv_color" class="form-control" required />
                </div> 

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Add Vehicle</button>
            </form>
        </div>
    </div>
</body>
</html>
