<% 
  // Check if 'title' is provided
  if (title) { 
%>
    <!-- Wrapper for responsive layout -->
    <div class="container">
        <!-- Display the title in an H1 element -->
        <h1><%= title %></h1>
    
        <!-- Placeholder for messages to display any notifications -->
        <%# messages() %>

        <!-- Render the 'grid' content dynamically -->
        <div id="inv-display">
            <%- grid %> 
        </div>
    </div>
<% 
  } else { 
    // Redirect to the home page if 'title' is missing
    res.redirect('/') 
  } 
%>

<!-- CSS reference -->
<link rel="stylesheet" href="/css/classification.css">
