<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="container">
        <!-- messages -->
        <% if (messages && messages.length > 0) { %>
            <div class="flash-message">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }) %>
            </div>
        <% } %>


        <!-- Login form -->
        <form action="/account/login" method="post">
            <h1><%= title %></h1>
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" required 
                   pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" 
                   title="Please enter a valid email address. Example: user@example.com">

            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required 
                   minlength="12" 
                   title="Password must be at least 12 characters long.">

            <button type="submit">Login</button>

            <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
        </form>
    </div>
</body>
</html>
